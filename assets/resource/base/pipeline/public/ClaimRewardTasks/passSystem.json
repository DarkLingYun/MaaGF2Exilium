{
    "开始巡录任务": {
        "max_hit": 1,
        "enabled": true,
        "next": [
            "findPassByText",
            "findPassByImage",
            "returnToHomePage"
        ]
    },
    "findPassByText": {
        "doc": "进入巡录领取任务",
        "recognition": "OCR",
        "expected": "^巡录$",
        "action": "Click",
        "next": [
            "switchToDailyPassRewardPage",
            "[JumpBack]开启远航巡录"
        ]
    },
    "findPassByImage": {
        "doc": "进入巡录领取任务",
        "recognition": "TemplateMatch",
        "template": [
            "其他/巡录.png"
        ],
        "green_mask": true,
        "action": "Click",
        "next": [
            "switchToDailyPassRewardPage",
            "[JumpBack]开启远航巡录"
        ]
    },
    "switchToDailyPassRewardPage": {
        "doc": "切换到沿途行动",
        "recognition": "OCR",
        "expected": "^沿途行动$",
        "action": "Click",
        "next": [
            "claimDailyPassReward",
            "switchToPassLevelRewardPage"
        ]
    },
    "claimDailyPassReward": {
        "doc": "领取沿途行动奖励",
        "recognition": "OCR",
        "expected": [
            "一键领取$"
        ],
        "action": "Click",
        "post_delay": 5000, // 这个动画特别长，默认的 post_wait_freezes 不够用
        "next": [
            "switchToPassLevelRewardPage"
        ]
    },
    "switchToPassLevelRewardPage": {
        "doc": "切换到远航巡逻",
        "recognition": "OCR",
        "expected": "^远航巡录$",
        "action": "Click",
        "next": [
            "claimPassLevelReward",
            "exitPassSystemPage"
        ]
    },
    "claimPassLevelReward": {
        "doc": "领取通行证等级奖励",
        "recognition": "OCR",
        "expected": [
            "一键领取$"
        ],
        "action": "Click",
        "next": [
            "findPaymentNotification",
            "choosePackage",
            "closePassClaimResultPage"
        ]
    },
    "findPaymentNotification": {
        "doc": "发现付费通行证购买提示",
        "recognition": "OCR",
        "expected": "解锁远航集后",
        "next": [
            "confirmPassRewardContent"
        ]
    },
    "confirmPassRewardContent": {
        "doc": "付费通行证购买提示，已付费不会弹出此节点",
        "recognition": "OCR",
        "expected": "^确认$",
        "action": "Click",
        "post_delay": 1500,
        "next": [
            "choosePackage",
            "closePassClaimResultPage"
        ]
    },
    "choosePackage": {
        "doc": "选择奖励",
        "next": [
            "findPurpleWeaponPackageReward",
            "findGoldWeaponPackageReward",
            "selectLightPackageReward",
            "closePassClaimResultPage"
        ]
    },
    "selectLightPackageReward": {
        "doc": "选择拂晓之光破晓天光补给包奖励",
        "recognition": "OCR",
        "expected": "晶条",
        "action": "Click",
        "next": [
            "openPassSupplyCrateReward"
        ]
    },
    "findPurpleWeaponPackageReward": {
        "doc": "发现紫色武器自选礼箱",
        "recognition": "OCR",
        "expected": "标准武器自选礼箱",
        "next": [
            "weaponPackageFound"
        ]
    },
    "findGoldWeaponPackageReward": {
        "doc": "发现金色武器自选礼箱",
        "recognition": "OCR",
        "expected": "远行守护自选礼箱",
        "next": [
            "weaponPackageFound"
        ]
    },
    "weaponPackageFound": {
        "doc": "发现武器自选礼箱，触发通知",
        "next": [
            "exitPackagePageAfterWeaponPackageFound"
        ],
        "focus": {
            "start": "[color:red]发现武器自选礼箱，请手动处理[/color]",
            "toast": "发现武器自选礼箱，请手动处理"
        }
    },
    "exitPackagePageAfterWeaponPackageFound": {
        "doc": "发现武器自选礼箱后关闭领奖界面",
        "recognition": "TemplateMatch",
        "template": [
            "公用按钮组件/关闭按钮_gray.png",
            "公用按钮组件/关闭按钮_black.png"
        ],
        "action": "Click",
        "post_delay": 1500,
        "next": [
            "exitPassSystemPage"
        ]
    },
    "openPassSupplyCrateReward": {
        "recognition": "OCR",
        "expected": [
            "^开启$",
            "^下一个$",
            "^下一$"
        ],
        "action": "Click",
        "post_delay": 2000,
        "next": [
            "choosePackage"
        ]
    },
    "closePassClaimResultPage": {
        "doc": "关闭通行证领取结果页面",
        "recognition": "OCR",
        "expected": "点击空白处关闭",
        "action": "Click",
        "next": [
            "closePassClaimResultPage",
            "exitPassSystemPage"
        ]
    },
    "exitPassSystemPage": {
        "next": [
            "returnToHomePage"
        ]
    },
    "开启远航巡录": {
        "recognition": "OCR",
        "expected": "开启远航巡录",
        "action": "Click"
    }
}